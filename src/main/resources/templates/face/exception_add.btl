<script src="../../layui/layui.js"></script>
<script src="../../js/ace.js"></script>
<script src="../../js/jquery-3.4.0.min.js"></script>
<script>
    layui.cache.page = '';
    layui.cache.user = {
        username: '游客'
        , uid: -1
        , avatar: '../images/avatar/00.jpg'
        , experience: 83
        , sex: '男'
    };
    layui.config({
        version: "1.0.0"
        , base: '../../module/' //这里实际使用时，建议改成绝对路径
    }).extend({
        fly: 'user_index'
    }).use('fly');

    layui.use(['layedit', 'form', 'layer'], function () {
        var layedit = layui.layedit;
        var form = layui.form;
        var layer = layui.layer;

        var randomV = randomMath();
        $("#randomMath").html(randomV[0]);

        layedit.set({
            //暴露layupload参数设置接口 --详细查看layupload参数说明
            uploadImage: {
                url: '/Attachment/LayUploadFile',
                accept: 'image',
                acceptMime: 'image/*',
                exts: 'jpg|png|gif|bmp|jpeg',
                size: '10240'
            }
            , uploadVideo: {
                url: '/Attachment/LayUploadFile',
                accept: 'video',
                acceptMime: 'video/*',
                exts: 'mp4|flv|avi|rm|rmvb',
                size: '20480'
            }
            //右键删除图片/视频时的回调参数，post到后台删除服务器文件等操作，
            //传递参数：
            //图片： imgpath --图片路径
            //视频： filepath --视频路径 imgpath --封面路径
            , calldel: {
                url: '/Attachment/DeleteFile'
            }
            //开发者模式 --默认为false
            , devmode: true
            //插入代码设置
            , codeConfig: {
                hide: true,  //是否显示编码语言选择框
                default: 'javascript' //hide为true时的默认语言格式
            },
            tool: ['html', 'code', 'strong', 'italic', 'underline', 'del', 'addhr', '|', 'fontFomatt', 'colorpicker', 'face', '|', 'left', 'center', 'right', '|', 'link', 'unlink', 'images', 'image_alt', 'video', 'anchors', '|', 'table', 'fullScreen', 'preview']
            , height: '90%'
        });
        editIndex = layedit.build('editArea'); //建立编辑器

        form.on('submit(addException)', function (data) {
            debugger;
            var answer = $("#L_vercode").val();
            if (answer != randomV[1]) {
                layer.msg("验证问题错误，请重试", {icon: 5, anim: 6});
                randomV = randomMath();
                $("#randomMath").html(randomV[0]);
                return false;
            }
            layedit.sync(editIndex);
            data.field.content = $("#editArea").val();
            if ($("#editArea").val() == '') {
                layer.msg("详细描述不能为空", {icon: 5, anim: 6});
                return false;
            }
            $.ajax({
                url: "/exception/add",
                type: "post",
                data: data.field,
                success: function (info) {
                    debugger;
                    var result = JSON.parse(info);
                    if (result.data == "true") {
                        var eid = result.eid;
                        layer.open({
                            content: '发布成功'
                            , btn: ['回到首页', '查看帖子', '再写一篇']
                            , yes: function (index, layero) {
                                //按钮【按钮一】的回调
                                location.href = "/";
                            }
                            , btn2: function (index, layero) {
                                $("#eid").val(eid);
                                $("#submitForm").submit();
                            }
                            , btn3: function (index, layero) {
                                //按钮【按钮三】的回调
                                location.href = "/face/exception/add";
                                //return false 开启该代码可禁止点击该按钮关闭
                            }
                            , cancel: function () {
                                //右上角关闭回调

                                //return false 开启该代码可禁止点击该按钮关闭
                            }
                        });
                    } else {
                        layer.msg("发布失败,请重试");
                    }
                }
            });
            return false;
        })
    });

    function randomMath() {
        var ret = [];
        var option = ['+', '-', '*', '/'];
        var random = Math.floor(Math.random() * 4 + 1);
        var num1 = Math.floor(Math.random() * 100 + 1);
        var num2 = Math.floor(Math.random() * 100 + 1);
        if (random == 4) {
            ret[0] = num1 * num2 + '/' + num1 + '=?';
            ret[1] = num2;
        } else {
            ret[0] = num1 + '' + option[random - 1] + '' + num2 + '=?';
            var retV;
            switch (option[random - 1]) {
                case '+':
                    retV = num1 + num2;
                    break;
                case '-':
                    retV = num1 - num2;
                    break;
                case '*':
                    retV = num1 * num2;
                    break;
            }
            ret[1] = retV;
        }
        return ret;
    }
</script>
</body>
</html>